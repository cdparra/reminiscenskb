<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="ReminiscensKB">
		<class>model.City</class>
		<class>model.FuzzyDate</class>
		<class>model.Location</class>
		<class>model.PublicMemento</class>
		<class>model.Tag</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/reminiscensdb?characterEncoding=UTF-8"/>
			<property name="javax.persistence.jdbc.user" value="reminiscens" />
			<property name="javax.persistence.jdbc.password" value="reminiscens@2013" />
		</properties>
	</persistence-unit>
	<persistence-unit name="ReminiscensKB-Test.Lifeparticipation">
        <class>model.City</class>
        <class>model.FuzzyDate</class>
        <class>model.Location</class>
        <class>model.PublicMemento</class>
        <class>model.Tag</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url"
                value="jdbc:mysql://test.lifeparticipation.org:3306/reminiscensdb?characterEncoding=UTF-8"/>
            <property name="javax.persistence.jdbc.user" value="cdparra" />
            <property name="javax.persistence.jdbc.password" value="cdparra@lp2012" />
        </properties>
    </persistence-unit>
</persistence>